<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Payments.sacnSucessfullPayemnt">


    <TextView
        android:id="@+id/headScan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Your Payment"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_semibold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="320dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:id="@+id/image_imageview"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/headScan"
        />

    <Button
        android:id="@+id/scan_btn"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginStart="70dp"
        android:layout_below="@id/image_imageview"
        android:layout_marginTop="130dp"
        android:backgroundTint="@color/accLog"
        android:fontFamily="@font/poppins_semibold"
        android:text="Countinue Shopping" />
</RelativeLayout>