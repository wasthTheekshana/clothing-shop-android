<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LocationCustomer.retail_category">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:padding="3dp"
        android:background="@drawable/cate_shape"
        android:layout_marginTop="20dp"

        >
        <TextView
            android:id="@+id/womenTv"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:text="@string/women"
            android:textColor="@color/cartclr"
            android:fontFamily="@font/poppins_bold"
            android:background="@drawable/cate_shape_1"
            android:gravity="center"
            android:textSize="21sp"/>
        <TextView
            android:id="@+id/menTv"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/men"
            android:gravity="center"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/black"
            android:textSize="21sp"/>
        <TextView
            android:id="@+id/kidsTv"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/kid"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_light"
            android:gravity="center"
            android:textSize="21sp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/search_shape"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center_vertical"
        android:paddingStart="25dp"
        android:textSize="20sp"
        android:text="Search"
        android:drawableStart="@drawable/ic_icon_awesome_search"
        android:drawablePadding="15dp"
        />


    <LinearLayout
        android:id="@+id/women"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="195dp"
        android:orientation="vertical"
        android:visibility="visible"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                >


                <TextView
                    android:id="@+id/new_women"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="@drawable/trend"
                    android:fontFamily="@font/lato_semibold"
                    android:gravity="bottom"
                    android:padding="20dp"
                    android:text="@string/innew"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/women_clothing"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/view_3"
                    android:fontFamily="@font/lato_semibold"
                    android:gravity="bottom"
                    android:padding="20dp"
                    android:text="@string/clothes"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    />

                <TextView
                    android:id="@+id/women_shoes"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/women_shoes"
                    android:fontFamily="@font/lato_semibold"
                    android:gravity="bottom"
                    android:padding="20dp"
                    android:text="@string/shoe"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    />

                <TextView
                    android:id="@+id/view5"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/women_bag"
                    android:fontFamily="@font/lato_semibold"
                    android:gravity="bottom"
                    android:padding="20dp"
                    android:text="@string/acces"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    />


            </LinearLayout>
        </ScrollView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/men"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="195dp"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                >


                <TextView
                    android:id="@+id/menNew"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="@drawable/men_new"
                    android:fontFamily="@font/lato_semibold"
                    android:gravity="bottom"
                    android:padding="20dp"
                    android:text="@string/innew"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/menClothing"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/men_clothes"
                    android:fontFamily="@font/lato_semibold"
                    android:gravity="bottom"
                    android:padding="20dp"
                    android:text="@string/clothes"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    />

                <TextView
                    android:id="@+id/menShoes"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/men_shoes"
                    android:fontFamily="@font/lato_semibold"
                    android:gravity="bottom"
                    android:padding="20dp"
                    android:text="@string/shoe"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    />

                <TextView
                    android:id="@+id/menAssories"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/men_bag"
                    android:fontFamily="@font/lato_semibold"
                    android:gravity="bottom"
                    android:padding="20dp"
                    android:text="@string/acces"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    />


            </LinearLayout>
        </ScrollView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/kid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="195dp"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                >


                <TextView
                    android:id="@+id/kidNew"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="@drawable/kids_new"
                    android:fontFamily="@font/lato_semibold"
                    android:gravity="bottom"
                    android:padding="20dp"
                    android:text="@string/innew"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/KidClothing"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/kids_cloth"
                    android:fontFamily="@font/lato_semibold"
                    android:gravity="bottom"
                    android:padding="20dp"
                    android:text="@string/clothes"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    />

                <TextView
                    android:id="@+id/kidShoes"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/kids_shoes"
                    android:fontFamily="@font/lato_semibold"
                    android:gravity="bottom"
                    android:padding="20dp"
                    android:text="@string/shoe"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    />


            </LinearLayout>
        </ScrollView>


    </LinearLayout>


</RelativeLayout>