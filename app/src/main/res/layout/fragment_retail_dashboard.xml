<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LocationCustomer.retail_dashboard">

    <!-- TODO: Update blank fragment layout -->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/bottom_nav_dashboard_icon" />

        <ImageView

            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_icon_awesome_search"
            android:layout_marginStart="230dp" />

        <ImageView
            android:id="@+id/scanBoth"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_baseline_qr_code_scanner_24"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentEnd="true"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/storyrecyleView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="135dp"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        >

        <TextView
            android:id="@+id/filteredProductTv"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:text="All"
            android:fontFamily="@font/lato_semibold"
            android:textSize="25dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Collection"
            android:textColor="@color/black"
            android:fontFamily="@font/lato_semibold"
            android:textSize="17dp"
            android:layout_marginStart="110dp"
            android:layout_gravity="center"/>

        <ImageButton
            android:id="@+id/filterProductBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_select_cate"
            android:layout_gravity="center"
            android:background="@null"
            android:scaleType="fitXY"
            android:layout_marginLeft="30dp"
            android:layout_alignParentEnd="true"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp">

        <androidx.recyclerview.widget.RecyclerView
            android:background="@color/blurwhite"
            android:id="@+id/home_main_recylce"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"/>
    </LinearLayout>
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>