        <Button
            android:id="@+id/addtobag"
            android:layout_width="200dp"
            android:layout_height="46dp"
            android:backgroundTint="@color/medium_blu"
            android:text="Add To Bag"
            android:layout_marginStart="160dp"
            android:layout_marginTop="290dp"
            />


    </RelativeLayout>
