<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/storyImage"
    android:paddingTop="6dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:transitionName="transition_story"
    tools:context=".story_full_detail">


    <LinearLayout
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_gravity="center"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24" />
        <TextView
            android:id="@+id/titleName"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Product Name"
            android:textAlignment="center"
            android:textSize="20sp"
            android:padding="10dp"
            android:textColor="@color/black"
            />

        <ImageButton
            android:id="@+id/bookmark"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/ic_baseline_bookmark_24" />

        <ImageButton
            android:id="@+id/addbag"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/ic_baseline_shopping_bag_24" />
    </LinearLayout>

    <ImageView
        android:id="@+id/fullstoryimage"
        android:layout_width="399dp"
        android:layout_height="match_parent"
        android:layout_below="@id/titlebar"
        app:srcCompat="@drawable/image_girl" />

<TextView
    android:id="@+id/ClickDetails"
    android:layout_width="300dp"
    android:layout_height="40dp"
    android:fontFamily="@font/inter_semibold"
    android:text="Full Sleeve Dress"
    android:textColor="@color/black"
    android:textSize="28sp"
    android:background="@drawable/card_bordes"
    android:textAlignment="center"
    android:layout_marginStart="45dp"
    android:layout_marginTop="650dp"/>


</RelativeLayout>