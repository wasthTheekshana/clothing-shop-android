<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LocationCustomer.retail_wishlist">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="15dp"
        android:background="@drawable/botton_line"
        >


        <ImageButton
            android:id="@+id/backbtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/ic_baseline_keyboard_arrow_left_30"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/wishlist"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:fontFamily="@font/inter_regular"/>
        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="140dp"
            android:backgroundTint="@android:color/transparent"
            app:srcCompat="@drawable/ic_icon_awesome_search" />


    </LinearLayout>

    <TextView
        android:id="@+id/itemCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="27 items"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/inter_medium"
        android:layout_marginTop="100dp"
        />

    <ImageView
        android:id="@+id/home_cate_btn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_select_cate"
        android:layout_marginTop="100dp"
        android:layout_marginStart="310dp"
        android:layout_gravity="center"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/wishlistrecycle"
        android:layout_width="368dp"
        android:layout_height="565dp"
        android:layout_marginTop="150dp" />
</RelativeLayout>