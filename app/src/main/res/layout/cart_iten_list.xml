<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        >

        <ImageView
            android:id="@+id/cartProductImage"
            android:layout_width="85dp"
            android:layout_height="115dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/cate_shape"
            android:src="@drawable/image_6" />

        <TextView
            android:id="@+id/cartPr_name"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:text="T-shirt"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="120dp"
            android:textSize="16sp"
            android:textColor="@color/slate_gray"
            />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="M"
            android:layout_marginTop="35dp"
            android:layout_gravity="right"
            android:layout_marginRight="25dp"
            android:gravity="center"
            android:background="@drawable/size_text_shape"
            android:textSize="18sp"
            android:textColor="@color/dark_violet"
            />

        <TextView
            android:id="@+id/qtyText"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="right"
            android:layout_marginTop="75dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/text_border"
            android:gravity="center"
            android:text="M"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/cartPr_price"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Rs. 13000"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="120dp"
            android:textSize="20sp"
            android:fontFamily="@font/inter_semibold"
            android:textColor="@color/black"
            />

        <ImageButton
            android:id="@+id/dlt_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="right"
            android:layout_marginTop="120dp"
            android:layout_marginRight="25dp"
            android:background="@null"
            android:gravity="center"
            android:text="M"
            android:src="@drawable/ic_baseline_delete_24"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </androidx.cardview.widget.CardView>
</RelativeLayout>